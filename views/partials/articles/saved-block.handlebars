<div class="articleListItem" id="{{_id}}">
    <a href="{{link}}">
        <p>{{title}}</p>
    </a>
    <button class="btn.notes btn btn-success" data-id="{{_id}}" data-toggle="modal" data-target="#m{{_id}}">Add Note</button>

    <div class="modal fade" id="m{{_id}}">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h3>Notes for article {{_id}}</h3>
                </div>
                <div class="modal-body">
                    {{!-- Here should be whatever notes exist, and a text form to add more --}}
                    <div class="existingNotes">
                        {{!-- Here there would be a get request to get all the notes associated with the article this site used --}}
                        {{!-- this will be generated by javascript since it will come from data and not handlebars --}}
                    </div>
                    <div class="noteform">
                        <div class="form-group">
                            <label for="exampleFormControlTextarea1">Make a note</label>
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                        <button class="btn"></button>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <button class="btn.delete btn btn-danger" data-id="{{_id}}">X</button>
</div>